<header>
  <%# ロゴをリンク化 %>
  <%= link_to root_path, class:"logo" do %>
    <%= image_tag "ReLearn-logo-orange.png", class: "logo_img" %>
  <% end %>
  <% if user_signed_in? %>
    <nav class="header_nav">
      <ul class="nav-list_center">
        <li class="nav-list-item-center"><div class="header_new_post_btn"><%= link_to "+新規投稿", new_post_path, data: {"turbolinks" => false} %></div></li>
        <li class="nav-list-item-center"><div class="header_post_index_btn"><%= link_to "Relearn一覧", posts_path %></div></li>
        <li class="nav-list-item-center"><div class="header_relearn_index_btn"><%= link_to "Relearn履歴", complete_posts_path %></div></li>
      </ul>
    </nav>
    <div class="header_right_box">
      <div class="header_right">
        <ul class="nav-list">
          <%# イメージ画像かユーザーの名前を押すとユーザー編集画面にとぶ %>
          <%= link_to edit_user_path(current_user) do %>
            <span id=nav_user_info>
              <%= render partial: "layouts/user_info", locals: { user: current_user} %>
            </span>
          <% end %>
            <li class="nav-list-item"><p>通知マーク</p></li>
        </ul>
      </div>
      <div class="menu_render">  
        <%= render "layouts/menu" %>
      </div>
    </div>
    
  <% else %>
    <nav class="header_nav">
      <ul class="nav-list_center">
        <li class="nav-list-item"><%= link_to "about", about_path, class:"btn btn-info btn-lg" %></li>
        <li class="nav-list-item"><%= link_to "新規登録", new_user_registration_path, class:"btn btn-info btn-lg" %></li>
        <li class="nav-list-item"><%= link_to "ログイン", new_user_session_path, class:"btn btn-info btn-lg"  %></li>
      </ul>
    </nav>
  <% end %>
</header>