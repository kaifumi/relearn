<div class="row">
  <%# ユーザーが投稿したものすべてを表示 %>
  <h1>Relearn履歴 一覧</h1>
  <div class="col-xs-9">
    <div class="col-xs-offset-1 col-xs-11">
    <table>
      <thead>
        <tr>
          <td style="width:8%;"></td>
          <td style="width:22%;">タイトル</td>
          <td style="width:25%;">学習ジャンル</td>
          <td style="width:30%;">内容</td>
          <td style="width:20%;">復習ステータス</td>
        </tr>
      </thead>
      <tbody>
        <%# 投稿の数だけeach文を回す %>
        <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= link_to post.title.truncate(15), post_complete_path(post), data: {"turbolinks" => false} %></td>
          <td><%= post.genre.type.truncate(15) %></td>
          <td><%= post.content.truncate(20) %></td>
          <td><%= post.relearn_count %>/4</td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @posts %>
    </div>
  </div>
  <div class="col-xs-3">
    <%# ジャンルの一覧をサイドバーで表示 %>
    <%= render partial: 'layouts/side_genre', locals: {genres: @genres} %>
  </div>
</div>