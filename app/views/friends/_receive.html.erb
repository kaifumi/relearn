<table class="receive_table">
  <tbody class="receive_tbody">
    <% unless models.nil? %>
      <%# modelsはレンダリング元から渡している各モデルを参照している %>
      <% models.each do |model| %>
        <tr>
          <td><p><%= attachment_image_tag(model.sender, :image, :fill, 50, 50, fallback: "default.png", class: "friend_image") %></p></td>
          <td><p><%= model.sender.name %></p></td>
          <td><p class="friend_request_approve_btn"><%= link_to "承認",user_friend_path(user_id: current_user.id, id: model.sender_id, judge: true),method: :patch %></p></td>
          <td><p class="friend_request_reject_btn"><%= link_to "拒否",user_friend_path(user_id: current_user.id, id: model.sender_id, judge: false),method: :patch %></p></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>




