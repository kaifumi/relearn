<%# リクエスト送信前か後かのパーシャル %>
<%# リクエスト送信済みか判断するメソッド %>
<% if send_request(user_id) == 0 %>
  <%# リクエスト未送信かつ未受信 %>
  <%= link_to "友達リクエスト",send_request_path(id: current_user.id, user_id: user_id),method: :post, class: "btn btn-primary", remote: true %>
<% elsif send_request(user_id) == 1 %>
  <%# リクエスト未送信かつ受信済 %>
  <%= link_to "リクエスト未承認",friend_receive_path(current_user.id), class: "btn btn-default" %>
<% elsif send_request(user_id) == 2 %>
  <%# リクエスト送信済かつ承認済 %>
  <%= link_to "取り消し",cancel_request_path(id: current_user.id, user_id: user_id),method: :delete, class: "btn btn-danger", remote: true %>
<% else %>
  <%# リクエスト送信済かつ未承認 %>
  <%= link_to "友達",user_friends_path(current_user.id), class: "btn btn-default" %>
<% end %>  
