<table class="search_table">
  <thead class="search_thead">
    <th></th>
    <th><p>検索結果：<%= models.length %>件</p></th>
  </thead>
  <tbody class="search_tbody">
    <%# modelsはレンダリング元から渡している各モデルを参照している %>
    <% models.each do |model| %>
      <tr>
        <td><p><%= attachment_image_tag(model, :image, :fill, 50, 50, fallback: "default.png", class: "friend_image") %></p></td>
        <td><p><%= model.name %></p></td>
        <td></td>
        <td><%= link_to user_posts_path(user_id: model.id) do %><p class="friend_index_posts_btn">投稿を見る</p><% end %></td>
        <td><p><div id="request_render_<%= model.id %>">
                  <%= render partial: "friends/request_status", locals: { user_id: model.id} %>
                </div></p></td>
      </tr>
    <% end %>
  </tbody>
</table>
